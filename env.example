# ===========================================
# Database (Neon)
# ===========================================

# Recommended for most uses (with connection pooling)
DATABASE_URL=postgres://username:password@host-pooler.region.aws.neon.tech/neondb?sslmode=require

# For uses requiring a connection without pgbouncer
DATABASE_URL_UNPOOLED=postgresql://username:password@host.region.aws.neon.tech/neondb?sslmode=require

# Parameters for constructing your own connection string
PGHOST=host-pooler.region.aws.neon.tech
PGHOST_UNPOOLED=host.region.aws.neon.tech
PGUSER=neondb_owner
PGDATABASE=neondb
PGPASSWORD=your_password_here

# Parameters for Vercel Postgres Templates
POSTGRES_URL=postgres://username:password@host-pooler.region.aws.neon.tech/neondb?sslmode=require
POSTGRES_URL_NON_POOLING=postgres://username:password@host.region.aws.neon.tech/neondb?sslmode=require
POSTGRES_USER=neondb_owner
POSTGRES_HOST=host-pooler.region.aws.neon.tech
POSTGRES_PASSWORD=your_password_here
POSTGRES_DATABASE=neondb
POSTGRES_URL_NO_SSL=postgres://username:password@host-pooler.region.aws.neon.tech/neondb
POSTGRES_PRISMA_URL=postgres://username:password@host-pooler.region.aws.neon.tech/neondb?connect_timeout=15&sslmode=require

# ===========================================
# Neon Auth
# ===========================================
NEXT_PUBLIC_STACK_PROJECT_ID=your_stack_project_id_here
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your_publishable_client_key_here
STACK_SECRET_SERVER_KEY=your_secret_server_key_here

# ===========================================
# Jooto API
# ===========================================
JOOTO_API_KEY=your_jooto_api_key_here
JOOTO_BOARD_ID=your_jooto_board_id_here
# 納品済みリスト
JOOTO_DELIVERED_LIST_ID=your_delivered_list_id_here
# 集計中リスト
JOOTO_AGGREGATING_LIST_ID=your_aggregating_list_id_here
# Freee納品書登録済みリスト
JOOTO_FREEE_INVOICE_REGISTERED_LIST_ID=your_freee_invoice_registered_list_id_here

# ===========================================
# Resend Email API
# ===========================================
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com
FEEDBACK_RECIPIENT_EMAIL=feedback@yourdomain.com

# ===========================================
# Authentication
# ===========================================
# Basic認証（管理画面用）
BASIC_AUTH_USER=admin
BASIC_AUTH_PASSWORD=your_basic_auth_password_here

# 集計機能専用パスワード
AGGREGATION_PASSWORD=your_aggregation_password_here

# NextAuth.js 認証設定
# 生成コマンド: openssl rand -base64 32
AUTH_SECRET=your_auth_secret_here

# 認証URL（本番環境で設定）
# AUTH_URL=https://your-domain.com

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info
