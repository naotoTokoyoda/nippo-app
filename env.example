# アプリケーション設定
NODE_ENV=development

# データベース設定（環境別）
# 開発環境: Neon Free
DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# 本番環境: Vercel Postgres
# DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# Prisma設定
PRISMA_GENERATE_DATAPROXY=true

# Resend Email設定
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com
FEEDBACK_RECIPIENT_EMAIL=feedback@yourdomain.com

# 外部API設定
# Jooto API設定（必須）
JOOTO_API_KEY=your_jooto_api_key_here
JOOTO_BOARD_ID=your_jooto_board_id_here

# セキュリティ設定
# JWT_SECRET=your_jwt_secret_here
# SESSION_SECRET=your_session_secret_here

# 認証設定
# 開発環境（NODE_ENV=development）では認証は自動的にスキップされます
# 本番環境でのみ以下の設定が必要です

# Basic認証設定（本番環境のみ有効）
BASIC_AUTH_USER=admin
BASIC_AUTH_PASSWORD=your_basic_auth_password_here

# 集計機能専用パスワード（本番環境のみ有効）
AGGREGATION_PASSWORD=your_aggregation_password_here

# ログ設定
LOG_LEVEL=info
